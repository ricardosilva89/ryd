	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "attach",
			"name": "Debug service",
			"port": 3001,
			"localRoot": "${workspaceFolder}",
			"skipFiles": ["<node_internals>/**"]
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Docker: Attach to Node",
			"port": 3001,
			"address": "localhost",
			"localRoot": "${workspaceFolder}",
			"sourceMapPathOverrides": { "/app/*": "${workspaceRoot}/*" },
			"remoteRoot": "/app/"
		}
	]
}
